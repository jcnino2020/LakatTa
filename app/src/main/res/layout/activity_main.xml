<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".MainActivity">

        <View
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#EFEFEF"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:elevation="4dp"
            android:src="@drawable/logo_lakat_ta"
            app:layout_constraintBottom_toBottomOf="@+id/topBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topBar"
            tools:srcCompat="@tools:sample/avatars" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/search_bar_background"
                    android:hint="Search for places, food..."
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="text"
                    android:autofillHints="name" />

                <TextView
                    android:id="@+id/tvFeatured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Featured"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/featuredCard"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/featuredViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Categories"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:columnCount="4"
                    android:rowCount="2">

                    <LinearLayout android:id="@+id/categoryThingsToDo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_things_to_do" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Things to Do" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/categoryFood" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_food" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Food" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/categoryHotels" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_hotels" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hotels" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/categoryEvents" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_events" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Events" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/categoryFestivals" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_festivals" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Festivals" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/categoryShopping" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_shopping" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Shopping" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/categoryTours" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_tours" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tours" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/categoryHistory" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:orientation="vertical" android:gravity="center" android:padding="4dp">
                        <ImageView android:layout_width="56dp" android:layout_height="56dp" android:background="@drawable/category_icon_background" android:src="@drawable/ic_history" android:padding="12dp" app:tint="@android:color/black"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="History" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="@android:color/black"/>
                    </LinearLayout>

                </GridLayout>

                <TextView
                    android:id="@+id/tvNearMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Near Me"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/nearMeCard"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <!-- ▼▼▼ THIS IS THE NEW MAP PREVIEW ▼▼▼ -->
                <org.osmdroid.views.MapView
                    android:id="@+id/previewMapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <!-- ▲▲▲ END OF MAP PREVIEW ▲▲▲ -->

            </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottomNavDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/bottomNavBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/nav_home_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_home"
                    app:tint="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textColor="@color/active_green"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/nav_inactive_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_map"
                    app:tint="@color/inactive_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Map"
                    android:textColor="@color/inactive_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navItinerary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/nav_inactive_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_itinerary"
                    app:tint="@color/inactive_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Itinerary"
                    android:textColor="@color/inactive_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/nav_inactive_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/inactive_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Profile"
                    android:textColor="@color/inactive_gray"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>