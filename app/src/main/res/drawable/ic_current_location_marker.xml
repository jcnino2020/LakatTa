<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White outer circle (border) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <stroke android:width="2dp" android:color="#55000000" /> <!-- Optional faint shadow -->
        </shape>
    </item>
    <!-- Blue inner circle -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#4285F4" /> <!-- Google's blue color -->
        </shape>
    </item>
</layer-list>